{
  "info": {
    "name": "Protocol 66 API",
    "description": "Complete API collection for Protocol 66 medication adherence platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Send Magic Link",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+972501234567\",\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/send-magic-link",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "send-magic-link"]
            }
          }
        },
        {
          "name": "Verify Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.accessToken);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/verify-token",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "verify-token"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Idan\",\n  \"lastName\": \"Baruch\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Medications",
      "item": [
        {
          "name": "Get Daily Plan",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/meds/daily-plan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "meds", "daily-plan"]
            }
          }
        },
        {
          "name": "Create Medication",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Lithium\",\n  \"dosage\": \"300mg\",\n  \"frequency\": \"daily_twice\",\n  \"scheduledTimes\": [\"08:00\", \"20:00\"],\n  \"startDate\": \"2024-01-01\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/meds",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "meds"]
            }
          }
        },
        {
          "name": "Verify Intake (Upload Image)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "medicationId",
                  "value": "medication-uuid-here",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/meds/verify-intake",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "meds", "verify-intake"]
            }
          }
        },
        {
          "name": "Get History",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/meds/history?days=30",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "meds", "history"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Mood",
      "item": [
        {
          "name": "Daily Check-in",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mood\": \"good\",\n  \"energy\": \"moderate\",\n  \"anxietyLevel\": 3,\n  \"sleepQuality\": 7,\n  \"notes\": \"Feeling better today\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/mood/check-in",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "mood", "check-in"]
            }
          }
        },
        {
          "name": "Get Mood History",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/mood/history?days=30",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "mood", "history"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Clinician",
      "item": [
        {
          "name": "Get Patient Alerts",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/clinician/patients/alerts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "clinician", "patients", "alerts"]
            }
          }
        },
        {
          "name": "Get Patient Report",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/clinician/patients/:patientId/report?days=30",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "clinician", "patients", ":patientId", "report"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ],
              "variable": [
                {
                  "key": "patientId",
                  "value": "patient-uuid-here"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
